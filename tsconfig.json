{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["DOM", "ES2020", "ESNext.AsyncIterable"],
        "module": "ES2022",
        "allowJs": false,
        "strict": true,
        "moduleResolution": "Node",
        "rootDir": "./src",
        "outDir": "./dist",
        "strictPropertyInitialization": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"]
}